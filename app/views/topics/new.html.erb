<p id="notice"><%= notice %></p>
<% if @topic.errors.any? %>
     <div id="error_explanation">
      <!-- バリデーションエラーの件数表示   -->
      <h2><%= @topic.errors.count %>件のエラーがあります</h2>

       <ul>
        <% @topic.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
       </ul>
       </div>
       <% end %>
  <div class="container">
  <div class="col-md-8 col-md-offset-2">
   <%= form_for(@topic) do |f| %>
     <div class="row">
     <%= f.file_field :picture %>
    </div>
  <div class="row">
    <%= f.text_field :content, class: 'btn btn-default' %>
  </div>


    <div class="submit">
    <%= f.submit class: 'btn btn-default push' %>
    </div>
 </div>
 <% end %>

<div class="back">
 <%= link_to "一覧に戻る" , topics_path %>
</div>

</div>
</div>