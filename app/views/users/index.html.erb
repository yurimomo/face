<div class="container">
  <h2>ユーザー</h2>
  
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= user.email %>
        <%= link_to "詳細ページ", user_path(user) %>
       
        
        <%= render partial: 'follow_form', locals: { user: user } if signed_in? %>

        <% if user.id != current_user.id %>

        <%= link_to user.name, user %><br>
        
        <% end %>
      </div>
  <% end %>
</div>
